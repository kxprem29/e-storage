<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
    rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css"  rel="stylesheet" />
</head>
<body>
  <main class="p-6 bg-gray-100 dark:bg-gray-800 h-screen w-screen flex flex-col items-center">

    <!-- Profile Icon (Top Right) -->
    <div class="absolute top-4 right-6">
      <a href="/user/profile" class="text-gray-700 dark:text-gray-300 text-2xl hover:text-blue-500">
        <i class="ri-user-settings-line"></i>
      </a>
    </div>

    <!-- Page Heading -->
    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-200 mb-4">Your Uploaded Files</h1>
    
    
    
    <!-- File List Table -->
    <!--  <div class="w-full max-w-3xl bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md"> -->
      <% if (files.length > 0) { %>
        <table class="w-full border-collapse border border-gray-300 dark:border-gray-600">
          <thead>
            <tr class="bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-300">
              <th class="p-3 border border-gray-300 dark:border-gray-600">File Name</th>
              <th class="p-3 border border-gray-300 dark:border-gray-600">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% files.forEach(file => { %>
              <tr class="text-center text-gray-800 dark:text-gray-200">
                <td class="p-3 border border-gray-300 dark:border-gray-600"><%= file.originalName %></td>
                <td class="p-3 border border-gray-300 dark:border-gray-600">
                  <a href="/user/files/download?path=<%= encodeURIComponent(file.path) %>" class="text-blue-500 hover:underline mr-2">
                    <i class="ri-download-line"></i> Download
                  </a>
                  <a href="/user/files/delete/<%= file._id %>" class="text-red-500 hover:underline">
                    <i class="ri-delete-bin-line"></i> Delete
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p class="text-gray-600 dark:text-gray-300 text-center">No files uploaded yet.</p>
      <% } %>
    </div> 

    <!-- Back to Dashboard Button -->
    <a href="/user/home" class="mt-4 text-blue-500 hover:underline">
      ‚Üê Back to Dashboard
    </a>

  </main>


<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>




</body>
</html>
