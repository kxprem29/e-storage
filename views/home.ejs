<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
    rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css"  rel="stylesheet" />
</head>
<body>
  <main class="p-6 bg-gray-100 dark:bg-gray-800 h-screen w-screen flex flex-col justify-center items-center">
    
    
    <div class="absolute top-4 right-6">
      <a href="/user/profile" class="text-gray-700 dark:text-gray-300 text-2xl hover:text-blue-500">
        <i class="ri-user-settings-line"></i>
      </a>
    </div>

   
    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-200 mb-4">Welcome to Your Dashboard!</h1>
    
 
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-6">What would you like to do?</p>

    <!-- Action Buttons -->
    <div class="flex gap-6">
      <a href="/user/files" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-6 rounded">
        Browse My Files
      </a>
      <a href="/user/upload" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded">
        Upload New File
      </a>
    </div>

  </main>

  <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
</body>
</html>
